<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_discuss_record_link_config_list" model="ir.ui.view">
        <field name="name">discuss.record.link.config.list</field>
        <field name="model">discuss.record.link.config</field>
        <field name="arch" type="xml">
            <list string="Record Link Models" default_order="prefix">
                <field name="active"/>
                <field name="prefix"/>
                <field name="label"/>
                <field name="model_id"/>
                <field name="limit"/>
            </list>
        </field>
    </record>

    <record id="view_discuss_record_link_config_form" model="ir.ui.view">
        <field name="name">discuss.record.link.config.form</field>
        <field name="model">discuss.record.link.config</field>
        <field name="arch" type="xml">
            <form string="Record Link Model">
                <sheet>
                    <group>
                        <group>
                            <field name="active"/>
                            <field name="prefix"/>
                            <field name="label"/>
                            <field name="model_id"/>
                            <field name="limit"/>
                        </group>
                        <group>
                            <field name="search_field_ids" widget="many2many_tags"/>
                            <field name="image_field_id"/>
                        </group>
                    </group>
                    <group string="Display Template">
                        <field name="display_template" widget="code" options="{'language': 'jinja', 'max_lines': 10}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_discuss_record_link_config" model="ir.actions.act_window">
        <field name="name">Record Link Models</field>
        <field name="res_model">discuss.record.link.config</field>
        <field name="view_mode">list,form</field>
        <field name="context">{"search_default_active": 1}</field>
        <field name="target">current</field>
    </record>
</odoo>
